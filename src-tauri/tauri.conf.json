{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-pet",
  "version": "0.1.0",
  "identifier": "com.qiuhongshen.desktop-pet",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "desktop-pet",
        "label": "main",
        "width": 100,
        "height": 100,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "shadow": false,
        "skipTaskbar": true
      },
      {
        "title": "menu",
        "label": "menu",
        "url": "index.html?type=menu",
        "width": 140,
        "height": 200,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "shadow": false,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
